{
  "name": "ecommpay/prestashop",
  "description": "Ecommpay payment module for PrestaShop",
  "version": "2.1.0",
  "type": "prestashop-module",
  "require": {
    "ecommpay/paymentpage-sdk": "^1.5",
    "php": ">=7.2 <8.4",
    "symfony/http-client": "^5.4|^6.0|^7.0",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-simplexml": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "repositories": {
    "ecommpay/paymentpage-sdk": {
      "type": "git",
      "url": "https://github.com/ITECOMMPAY/paymentpage-sdk-php.git"
    }
  },
  "autoload": {
    "psr-4": {
      "Ecommpay\\": "src/",
      "Ecommpay\\Tests\\": "tests/"
    },
    "classmap": [
      "ecommpay.php",
      "controllers/"
    ]
  },
  "config": {
    "prepend-autoloader": false
  }
}
